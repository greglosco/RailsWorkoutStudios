<%= form_for @review do |f| %>
    <%= f.label :studio_name %>
    <%= f.collection_select :studio_name, Studio.all, :name, :name %>
    <br> <br>
    <%= f.label :rating %>
    <%= f.number_field :rating, max: 5, min: 0 %>/5
    <br> <br>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <br> <br>
    <%= f.submit "#{button_text} Review" %>
<% end %>